{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist",
        "installCommand": "cd client && npm install --include=dev",
        "buildCommand": "cd client && npm run build"
      }
    },
    {
      "src": "server/vercel.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/vercel.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
