# ========================================
# MR PIKIPIKI TRADING - Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=production
PORT=5000

# ========================================
# DATABASE CONFIGURATION (PostgreSQL/Neon)
# ========================================
# Get your DATABASE_URL from Neon.tech or other PostgreSQL provider
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@hostname:5432/database_name

# SSL Configuration for database connection
# Set to "true" for production databases (Neon, Heroku, etc.)
# Set to "false" for local PostgreSQL
DB_SSL=true

# ========================================
# JWT AUTHENTICATION
# ========================================
# Generate a strong random secret for JWT tokens
# You can use: openssl rand -base64 32
# Or: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# JWT Token Expiration (optional)
# Default: 24h (24 hours)
JWT_EXPIRES_IN=24h

# ========================================
# CORS CONFIGURATION (Optional)
# ========================================
# Frontend URL for CORS (Vercel will auto-detect)
CLIENT_URL=https://your-app.vercel.app

# ========================================
# FILE UPLOAD CONFIGURATION (Optional)
# ========================================
# Maximum file size for uploads (in bytes)
# Default: 5MB = 5 * 1024 * 1024
MAX_FILE_SIZE=5242880

# Upload directory
UPLOAD_DIR=uploads

